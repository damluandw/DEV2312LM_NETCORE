@using DanhGiaRenLuyen_V4.Models.DBModel
@model IEnumerable<DanhGiaRenLuyen_V4.Models.DBModel.Student>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Lecturer/Views/Shared/_LayoutLecturer.cshtml";
    List<SumaryOfPoint> check = ViewBag.Check;

}

<form asp-action="Index" method="get">
    <input type="text" name="name" placeholder="Nhập tên sinh viên" value="@ViewBag.name">
    <button type="submit">Tìm kiếm</button>
</form>
<hr />

@if (Model.FirstOrDefault() != null)
{
    <table class="table">
        <tbody class="table-group-divider">

            @foreach (var item in Model)
            {
                <tr>
                    <td><b>@item.FullName</b></td>
                    <td><p>(@item.Id)</p></td>
                    @if (item.IsActive == 1)
                    {
                        <td> <a class="nav-link text-dark btn btn-success" asp-area="Lecturer" asp-controller="Result" asp-action="Lecturer" asp-route-studentId="@item.Id">Chọn</a></td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        <h5>Không tìm thấy sinh viên nào !!!</h5>
    </div>
}

