@{
    ViewData["Title"] = "Product";
    var product = ViewBag.Product;
}
<h2>Your Profile</h2>
<div class="row">
    <div class="col-md-4">
        <img src="@product.Image" alt="image1" class="w-100" />
    </div>
    <div class="col-md-8">
        <h2>Full Name: @product.Name </h2>
        <h3>Giá gốc: @product.Price  Giá mới: @product.SalePrice</h3>
        <div>Mô tả</div>
        <div>@product.Description</div>      
        <h3>
            Trạng thái:
            @if (product.Status == 1)
            {
                <span>Còn hàng</span>
            }
            else
            {
                <span>Hết hàng</span>
            }
        </h3>
        <h3>Ngày đăng: @product.CreateAt</h3>
        <p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-sm btn-danger">
                Back to list
            </a>
        </p>
    </div>
</div>

