@{
    var products = ViewBag.Products;
    var categories = ViewBag.Categories;
}

<div class="row">
    <div class="col-md-3">
        <h2>Danh mục</h2>
        <ul>
            @foreach (var item in categories)
            {
                <li>@item.Name</li>
            }

        </ul>
    </div>
    <div class="col-md-9">
        <h2>Danh sách sản phẩm</h2>
        <div class="row">
            @foreach (var item in products)
            {
                <div class="col-md-4 mt-4">
                    <div>
                        <img src="@item.Image" alt="img" class ="w-100"/>
                    </div>
                    <div>
                        <h3>@item.Name</h3>
                        <div class="text-decoration-line-through">Giá @item.Price</div>
                        <div>Giá @item.SalePrice</div>
                    </div>
                    @*<a asp-controller="Product" asp-action="Product" class="btn btn-success btn-block">
                        Chi Tiết
                    </a>*@
                    <a asp-route="san-pham/chi-tiet" class="btn btn-success btn-block">
                        Chi Tiết
                    </a>
                </div>
            }

        </div>
    </div>

</div>