@{
    ViewData["Title"] = "Index";
    var accounts = ViewBag.Accounts;
}
<div class="row">
    @foreach(var item in accounts)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <img class="w-100" src="@item.Avatar" alt="anh avatar" />
                <div class="caption">
                    <h3>@item.Name</h3>
                    <p>
                        @item.Bio
                    </p>
                    <p>
                        <a asp-route="profile" class="btn btn-success btn-block">
                            Profile
                        </a>
                    </p>
                </div>

            </div>
        </div>
    }  

</div>