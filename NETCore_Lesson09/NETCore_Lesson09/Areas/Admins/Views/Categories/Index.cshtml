@model X.PagedList.IPagedList<NETCore_Lesson09.Models.Category>
@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

@*<p>
    <a asp-action="Create">Create New</a>
