@model DanhGiaRenLuyen_V6.Models.DBModel.AnswerList

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Chi tiết</h1>

<div>
    <h4>Câu trả lời</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nội dung
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContentAnswer)
        </dd>
        <dt class = "col-sm-2">
            Điểm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnswerScore)
        </dd>
        <dt class = "col-sm-2">
            Trạng thái
        </dt>
        @if(Model.Status == 1)
        {
            <dd class="col-sm-10">
                Đang được sử dụng
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Đang không sử dụng
            </dd>
        }

        <dt class = "col-sm-2">
            Ngày tạo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class = "col-sm-2">
            Ngày cập nhật
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdateDate)
        </dd>
        <dt class = "col-sm-2">
            User tạo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdateBy)
        </dd>
        <dt class = "col-sm-2">
            Câu hỏi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Question.ContentQuestion)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" asp-route-questionId="@ViewBag.QID">Quay trở lại</a>
</div>
