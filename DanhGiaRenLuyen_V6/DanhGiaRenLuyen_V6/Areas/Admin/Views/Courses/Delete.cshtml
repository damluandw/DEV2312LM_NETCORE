@model DanhGiaRenLuyen_V6.Models.DBModel.Course

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Hoàn thành</h1>

<h3>Bạn có chắc chắn muốn hoàn thành khoá học?</h3>
<p class="text-danger">Khi hoàn thành khoá học, tất cả các lớp và sinh viên sẽ bị ẩn đi, tài khoản của sinh viên khoá đó cũng sẽ dừng hoạt động</p>
<div>
    <h4>Khoá học</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsDelete)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsDelete)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" name="isDelete" value="false" />
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xác nhận" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-isDelete="false">Quay lại</a>
    </form>
</div>
