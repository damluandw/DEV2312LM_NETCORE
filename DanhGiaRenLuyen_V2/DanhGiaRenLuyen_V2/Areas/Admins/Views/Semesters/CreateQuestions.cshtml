            </div>
            <div class="form-group">
                <label asp-for="TypeQuestionId" class="control-label"></label>
                <select asp-for="TypeQuestionId" class="form-control" asp-items="ViewBag.TypeQuestionId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SemesterId" class="control-label"></label>
                <select asp-for="SemesterId" class="form-control" asp-items="ViewBag.SemesterId"></select>
            </div>
            <div class="form-group">
                <label asp-for="GroupQuestionId" class="control-label"></label>
                <select asp-for="GroupQuestionId" class="form-control" asp-items="ViewBag.GroupQuestionId"></select>
            </div>
            <div class="form-group">
                <label asp-for="OrderBy" class="control-label"></label>
                <input asp-for="OrderBy" class="form-control" />
                <span asp-validation-for="OrderBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
