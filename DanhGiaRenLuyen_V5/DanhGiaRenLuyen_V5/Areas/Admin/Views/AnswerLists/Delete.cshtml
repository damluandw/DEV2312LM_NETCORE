@model DanhGiaRenLuyen_V5.Models.DBModel.AnswerList

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Xoá</h1>

<h3>Câu trả lời sẽ bị xoá vĩnh viễn! Bạn có chắc chắn muốn xoá?</h3>
<div>
    <h4>Câu trả lời</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContentAnswer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContentAnswer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnswerScore)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnswerScore)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsEdit)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsEdit)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdateDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdateDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdateBy)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdateBy)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Checked)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Checked)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Question)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Question.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="departmentId" value="@ViewBag.DepartmentId"/>
        <input type="hidden" name="questionId" value="@ViewBag.QID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-questionId="@ViewBag.QID">Quay lại</a>
    </form>
</div>
