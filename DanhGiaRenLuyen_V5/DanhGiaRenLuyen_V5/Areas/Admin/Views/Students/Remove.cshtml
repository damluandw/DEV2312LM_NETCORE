@model DanhGiaRenLuyen_V5.Models.DBModel.Students

@{
    ViewData["Title"] = "Remove";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Xoá vĩnh viễn</h1>

<h3>Bạn có chắc chắn muốn xoá vĩnh viễn sinh viên?</h3>
<p class="text-danger">Tài khoản đăng nhập của sinh viên cũng sẽ bị xoá vĩnh viễn</p>
<div>
    <h4>Thông tin sinh viên</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Birthday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Birthday)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Class)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Class.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position.Id)
        </dd>
    </dl>

    <form asp-action="Remove">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="departmentId" value="@ViewBag.DepartmentId" />
        <input type="submit" value="Xoá" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-departmentId="@ViewBag.DepartmentId" asp-route-isDelete="true">Quay lại</a>
    </form>
</div>
