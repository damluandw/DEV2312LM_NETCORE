@model DanhGiaRenLuyen_V5.Models.DBModel.Students

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Chi tiết</h1>

<div>
    <h4>Sinh viên</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Birthday)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Birthday)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        
            @if (Model.Gender == true)
            {
                <dd class = "col-sm-10">
                    Nữ
                </dd>
            }
            else
            {
                <dd class = "col-sm-10">
                    Nam
                </dd>
            }
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        @if (Model.IsActive == 1)
        {
            <dd class="col-sm-10">Đang học</dd>
        }
        else if (Model.IsActive == 2)
        {
            <dd class="col-sm-10">Bảo lưu</dd>
        }
        else if (Model.IsActive == 3)
        {
            <dd class="col-sm-10">Tốt nghiệp</dd>
        }
        else
        {
            <dd class="col-sm-10">>Thôi học</dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Class.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Class.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Position.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Position.Name)
        </dd>
    </dl>
</div>
<div>

    <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-departmentId="@Model.Class.DepartmentId" asp-route-isDelete="@ViewBag.IsDelete">Sửa</a> |
    <a asp-action="Index" asp-route-departmentId="@ViewBag.DepartmentId" asp-route-isDelete="@ViewBag.IsDelete">Quay lại</a>
</div>
