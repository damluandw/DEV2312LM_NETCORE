@model DanhGiaRenLuyen_V5.Models.DBModel.QuestionHisory

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Câu hỏi kì @Model.Semester.Name năm học @Model.Semester.SchoolYear</h2>
<div>
    <h4>QuestionHisory</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            STT
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderBy)
        </dd>
        <dt class = "col-sm-2">
            User khởi tạo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateBy)
        </dd>
        <dt class = "col-sm-2">
            Ngày tạo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class = "col-sm-2">
            Câu hỏi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Question.ContentQuestion)
        </dd>
        <dt class="col-sm-2">
            Câu trả lời được sử dụng
        </dt>
        <dd class="col-sm-10">
            <div>
                @foreach (var item in Model.Question.AnswerLists)
                {
                    <p> - @item.ContentAnswer</p>
                }
            </div>
        </dd>
    </dl>

</div>
<div>
    <a asp-controller="QuestionHistory" asp-action="Index" asp-route-semesterId="@Model.SemesterId">Quay lại</a>
</div>
