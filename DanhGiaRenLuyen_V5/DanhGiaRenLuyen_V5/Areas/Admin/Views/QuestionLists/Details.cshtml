@model DanhGiaRenLuyen_V5.Models.DBModel.QuestionList

@{
    ViewData["Title"] = "DetailsQuestionList";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div>
    <h4>Chi tiết câu hỏi</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nội dung
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContentQuestion)
        </dd>
        <dt class = "col-sm-2">
            Trạng thái
        </dt>
        @if (Model.Status == 1)
        {
            <dd class = "col-sm-10">
                Đang được sử dụng
            </dd>
        }
        else
        {
            <dd class = "col-sm-10">
                Đang không sử dụng
            </dd>
        }
        <dt class = "col-sm-2">
            Ngày tạo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class = "col-sm-2">
            Ngày cập nhật
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdateDate)
        </dd>
        <dt class = "col-sm-2">
            Người tạo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdateBy)
        </dd>
        <dt class = "col-sm-2">
            Nhóm câu hỏi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GroupQuestion.Name)
        </dd>
        <dt class = "col-sm-2">
            Loại câu hỏi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeQuestion.Name)
        </dd>
        <dt class="col-sm-2">
            Câu trả lời
        </dt>
        <dd class="col-sm-10">
            @foreach(var item in Model.AnswerLists)
            {
                <p> - @item.ContentAnswer</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Quay lại</a>
</div>
