@model IEnumerable<DanhGiaRenLuyen_V5.Models.DBModel.Semester>

@{
    ViewData["Title"] = "Semester";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";


}

<h1>Kì đánh giá</h1>
@if(ViewBag.isActive == 1){
    <p>
        <a asp-action="Create">Bắt đầu kì đánh giá mới</a>
    </p>
}
else
{
    <h3 class="text-danger">Danh sách ẩn</h3>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolYear)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOpenStudent)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateEndStudent)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateEndClass)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateEndLecturer)

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        string color = "";
        @if (item.DateEndLecturer > DateTime.Now)
        {
            color = "red";
        }

        <tr>
            <td style="color:@color;">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td style="color:@color;">
                @Html.DisplayFor(modelItem => item.SchoolYear)
            </td>
            <td style="color:@color;">
                @Html.DisplayFor(modelItem => item.DateOpenStudent)
            </td>
                <td style="color:@color;">
                @Html.DisplayFor(modelItem => item.DateEndStudent)
            </td>
            <td style="color:@color;">
                @Html.DisplayFor(modelItem => item.DateEndClass)
            </td>
                <td style="color:@color;">
                @Html.DisplayFor(modelItem => item.DateEndLecturer)
            </td>
            <td>
                @if (ViewBag.isActive == 1)
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Chỉnh sửa</a> <span>|</span>
                    <a asp-action="Delete" asp-route-id="@item.Id">Ẩn</a>
                }else{
                    <a asp-action="Show" asp-route-semesterId="@item.Id">Hiển thị</a> <span>|</span>
                    <a asp-action = "Remove" asp-route-id = "@item.Id" > Xoá </a>
                }
            </td>
        </tr>
}
    </tbody>
</table>

