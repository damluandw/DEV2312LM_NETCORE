@model DanhGiaRenLuyen_V5.Models.DBModel.AccountLecturer
@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Đăng nhập giảng viên";
    Layout = "~/Areas/Lecturer/Views/Shared/_LayoutLecturer.cshtml";
	var ss = HttpContextAccessor.HttpContext.Session.GetString("LecturerLogin");

}

@if (ss != null)
{
	<div>
		<h2 class="text-center my-2 py-2">Bạn đã đăng nhập thành công, @ViewBag.Student.UserName</h2>
	</div>
}
else
{
	<div class="Login">	
		<div class="background">
			<div class="shape"></div>
			<div class="shape"></div>
		</div>
		<form asp-action="Index" method="post">
			<h3>Giảng viên đăng nhập tại đây !!!</h3>

			<label for="username">Mã giảng viên</label>
			<input type="text" asp-for=UserName placeholder="Mã giảng viên" id="username" required="">

			<label for="password">Mật khẩu</label>
			<input type="password" asp-for=Password placeholder="Mật khẩu" id="password" required="" value="12345">
			<div class="text-danger"><i class="text-danger">@TempData["errorLogin"]</i></div>

			<input type="submit" value="Đăng nhập">
		</form>
	</div>

}
	


