<h2>Danh sách các cuốn sách</h2>
<form action="" method="POST" class="form-inline" role="form">
    <div class="form-group">
        <select name="AuthorId" class="form-control" asp-items="@ViewBag.authors">
            <option value="">Chọn tác giả</option>
        </select>
        <select name="GenreId" class="form-control" asp-items="@ViewBag.genres">
            <option value="">Chọn thể loại</option>
        </select>
        <button type="sumbit" class="btn btn-primary">Tìm kiếm</button>
        <a asp-controller="Book" asp-action="Create" class="btn btn-danger">Thêm mới</a>
    </div>
</form>
<hr />
<table class="table table-border">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tiêu đề</th>
            <th>Tác giả</th>
            <th>Thể loại</th>
            <th>Giá</th>
            <th>Hình ảnh</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.AuthorId</td>
                <td>@book.GenreId</td>
                <td>@book.Price</td>
                <td>
                    <img src="@book.Image" alt="@book.Title" width="40" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-primary tbn-sm">Sửa</a>
                </td>
            </tr>

        }
    </tbody>   

</table>